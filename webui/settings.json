{
  "version": "1.0.0",
  "supportI18n": true,
  "settings": {
    "DEBUG_MODE": {
      "type": "boolean",
      "title": "调试模式",
      "description": "启用调试输出和详细日志记录",
      "default": false,
      "translations": {
        "zh": {
          "title": "调试模式",
          "description": "启用调试输出和详细日志记录"
        },
        "en": {
          "title": "Debug Mode",
          "description": "Enable debug output and detailed logging"
        },
        "ru": {
          "title": "Режим отладки",
          "description": "Включить отладочный вывод и подробное логирование"
        }
      }
    },
    "LOG_LEVEL": {
      "type": "select",
      "title": "日志级别",
      "description": "设置系统日志记录的详细程度",
      "default": "INFO",
      "choices": [
        { 
          "value": "DEBUG", 
          "label": "调试",
          "translations": {
            "zh": "调试",
            "en": "Debug",
            "ru": "Отладка"
          }
        },
        { 
          "value": "INFO", 
          "label": "信息",
          "translations": {
            "zh": "信息",
            "en": "Info",
            "ru": "Информация"
          }
        },
        { 
          "value": "WARN", 
          "label": "警告",
          "translations": {
            "zh": "警告",
            "en": "Warning",
            "ru": "Предупреждение"
          }
        },
        { 
          "value": "ERROR", 
          "label": "错误",
          "translations": {
            "zh": "错误",
            "en": "Error",
            "ru": "Ошибка"
          }
        }
      ],
      "translations": {
        "zh": {
          "title": "日志级别",
          "description": "设置系统日志记录的详细程度"
        },
        "en": {
          "title": "Log Level",
          "description": "Set the verbosity of system logging"
        },
        "ru": {
          "title": "Уровень логирования",
          "description": "Установить детализацию системного логирования"
        }
      }
    },
    "AUTO_START": {
      "type": "boolean",
      "title": "自动启动",
      "description": "系统启动时自动运行ModuleWebUI服务",
      "default": true,
      "translations": {
        "zh": {
          "title": "自动启动",
          "description": "系统启动时自动运行ModuleWebUI服务"
        },
        "en": {
          "title": "Auto Start",
          "description": "Automatically run ModuleWebUI service on system startup"
        },
        "ru": {
          "title": "Автозапуск",
          "description": "Автоматически запускать сервис ModuleWebUI при старте системы"
        }
      }
    },
    "PORT": {
      "type": "input",
      "title": "端口号",
      "description": "Web服务监听端口（1024-65535）",
      "default": "8080",
      "validation": {
        "pattern": "^[0-9]+$",
        "min": 1024,
        "max": 65535
      },
      "translations": {
        "zh": {
          "title": "端口号",
          "description": "Web服务监听端口（1024-65535）"
        },
        "en": {
          "title": "Port Number",
          "description": "Web service listening port (1024-65535)"
        },
        "ru": {
          "title": "Номер порта",
          "description": "Порт прослушивания веб-сервиса (1024-65535)"
        }
      }
    },
    "THEME": {
      "type": "select",
      "title": "界面主题",
      "description": "选择界面的颜色主题",
      "default": "auto",
      "choices": [
        { 
          "value": "light", 
          "label": "浅色",
          "translations": {
            "zh": "浅色",
            "en": "Light",
            "ru": "Светлая"
          }
        },
        { 
          "value": "dark", 
          "label": "深色",
          "translations": {
            "zh": "深色",
            "en": "Dark",
            "ru": "Тёмная"
          }
        },
        { 
          "value": "auto", 
          "label": "跟随系统",
          "translations": {
            "zh": "跟随系统",
            "en": "Follow System",
            "ru": "Следовать системе"
          }
        }
      ],
      "translations": {
        "zh": {
          "title": "界面主题",
          "description": "选择界面的颜色主题"
        },
        "en": {
          "title": "Interface Theme",
          "description": "Choose the color theme for the interface"
        },
        "ru": {
          "title": "Тема интерфейса",
          "description": "Выберите цветовую тему для интерфейса"
        }
      }
    },
    "LANGUAGE": {
      "type": "select",
      "title": "界面语言",
      "description": "选择界面显示语言",
      "default": "zh",
      "choices": [
        { 
          "value": "zh", 
          "label": "中文",
          "translations": {
            "zh": "中文",
            "en": "Chinese",
            "ru": "Китайский"
          }
        },
        { 
          "value": "en", 
          "label": "English",
          "translations": {
            "zh": "英语",
            "en": "English",
            "ru": "Английский"
          }
        },
        { 
          "value": "ru", 
          "label": "Русский",
          "translations": {
            "zh": "俄语",
            "en": "Russian",
            "ru": "Русский"
          }
        }
      ],
      "translations": {
        "zh": {
          "title": "界面语言",
          "description": "选择界面显示语言"
        },
        "en": {
          "title": "Interface Language",
          "description": "Choose the display language for the interface"
        },
        "ru": {
          "title": "Язык интерфейса",
          "description": "Выберите язык отображения интерфейса"
        }
      }
    }
  }
}